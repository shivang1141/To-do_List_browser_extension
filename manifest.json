{
  "manifest_version": 2,
  "name": "Todo List",
  "version": "1.0",
  "description": "A simple to-do list Chrome extension.",
  "icons": {
    "48": "icons/icon-checklist.png",
    "128": "icons/icon-checklist.png"
  },
  "browser_action": {
    "default_icon": "icons/icon-checklist.png",
    "default_popup": "popup.html",
    "default_title": "Open Todo List"
  },
  "permissions": [
    "storage"
  ]
}
